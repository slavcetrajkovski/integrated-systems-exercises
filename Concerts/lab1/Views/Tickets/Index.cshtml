@model IEnumerable<Lab.Model.Domain.Ticket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Concerts</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfPeople)
            </th>
            <th>@Html.DisplayNameFor(model => model.Concert)</th>
            <th>@Html.DisplayNameFor(model => model.Concert.ConcertPrice)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfPeople)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Concert.ConcertName)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Concert.ConcertPrice)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="AddTicketToCart" asp-route-id="@item.Id">Buy a ticket</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
